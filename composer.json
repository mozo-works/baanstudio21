{
    "name": "mozo-works/baanstudio21",
    "description": "Project template for Drupal 9 projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "package",
            "package": {
                "name": "ckeditor-plugin/colorbutton",
                "version": "4.11.1",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/colorbutton/releases/colorbutton_4.11.1.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ckeditor-plugin/panelbutton",
                "version": "4.11.1",
                "type": "drupal-library",
                "dist": {
                    "url": "https://download.ckeditor.com/panelbutton/releases/panelbutton_4.11.1.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "ckeditor-plugin/colorbutton": "*",
        "ckeditor-plugin/panelbutton": "*",
        "composer/installers": "^2",
        "cweagans/composer-patches": "^1.7",
        "drupal/colorbutton": "^1.2",
        "drupal/components": "^2.4",
        "drupal/config_pages": "^2.9",
        "drupal/core-composer-scaffold": "^9.3",
        "drupal/core-recommended": "^9.3",
        "drupal/gin": "^3.0@beta",
        "drupal/gin_login": "^1.2",
        "drupal/paragraphs": "^1.13",
        "drupal/prevnext": "^2.0",
        "drupal/radix": "^4",
        "drupal/weight": "^3.2",
        "drush/drush": "^10"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "env": "export $(grep -v '^#' .env | xargs)",
        "start": [
            "@env",
            "COMPOSER_PROCESS_TIMEOUT=0 drush rs"
        ],
        "pull:files": "drush -y -v rsync @prod:%files @local:%files",
        "pull:db": "drush -y -v sql:sync @prod @local",
        "pull": [
            "@pull:files",
            "@pull:db"
        ],
        "prod:status": "drush -v @prod ssh 'cd ../ && drush st && drush cst && git status && composer outdated --direct && du -sch'",
        "prod:deploy": "drush -v @prod ssh 'cd ../ && git pull && composer update -o && drush deploy'"
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "enable-patching": true,
        "patches": {
            "drupal/prevnext": {
                "prevnext_respect_weight_field": "./patches/prevnext_respect_weight_field.patch"
            }
        }
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/devel": "^4.1",
        "kint-php/kint": "^4.1"
    }
}
