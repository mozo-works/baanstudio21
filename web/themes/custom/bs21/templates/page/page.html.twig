/**
 * @file
 * Template for the main page.
 */
#}
{% set classes = ['container-fluid page'] %}

<header{{ header_attributes }}>
{% embed '@bs21/navbar/navbar.twig' with {
  placement: 'sticky-top'
} %}
  {% block branding %}
    {% if page.navbar_branding %}
      {{ page.navbar_branding }}
    {% endif %}
  {% endblock %}

  {% block left %}
    {% if page.navbar_left %}
      {{ page.navbar_left }}
    {% endif %}
  {% endblock %}

  {% block right %}
    {% if page.navbar_right %}
      {{ page.navbar_right }}
    {% endif %}
  {% endblock %}
{% endembed %}
</header>

<div{{ attributes.addClass(classes) }}>
  <main{{ main_attributes }}>
    {% if page.header %}
      <header{{ main_header_attributes }}>
        <div class="container-fluid p-0">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
      <div class="page--content">
        <div{{ main_content_attributes }}>
          {{ page.content }}
        </div>
      </div>
    {% endif %}
  </main>

  <footer id="site-footer" class="page--footer">
    <span class="d-inline-block float-end" id="btn-top">Up</span>
    <span class="d-inline-block">Â© Baan Studio</span>
  </footer>

</div>
