{#
/**
 * @file
 * Template for Navbar component.
 */
#}
<nav id="global-nav" class="navbar navbar-expand-lg navbar-light pb-3">
  <div class="container-fluid row" style="padding-left: 40px;">
    <span id="site-name" class="col-lg-6">
    {% block branding %}
      {{ branding }}
    {% endblock %}
    </span>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse col-lg-6 ps-1" id="navbarSupportedContent">
      <ul class="navbar-nav row w-100">
        <li class="nav-item col-lg-4"><a class="ms-2" href="/projects/browse">Archive</a></li>
        <li id="search-block" class="nav-item col-lg-2{% if keys %} position-absolute{% else%} d-none{% endif %}">
          <form action="/search/node">
            <input id="search-input" name="keys" class="border-bottom text-start w-75 d-inline-block"{% if keys %} value="{{ keys }}"{% endif %}>
          </form>
        </li>
        <li class="nav-item col-lg-4"><a class="text-end" id="try-search" href="#">Search</a></li>
        <li class="nav-item col-lg-4"><a class="text-end" href="/about">About</a></li>
      </ul>
    </div>
  </div>
</nav>
