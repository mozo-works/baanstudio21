{#
/**
 * @file
 * Template for Navbar component.
 */
#}
<nav id="global-nav" class="navbar navbar-expand-lg navbar-light pb-3">
  <div class="container-fluid row">
    <span id="site-name" class="col-lg-6">
    {% block branding %}
      {{ branding }}
    {% endblock %}
    </span>
    <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse col-lg-6 ps-2" id="navbarSupportedContent">
      <ul class="navbar-nav row w-100">
        <li class="nav-item col-lg-4">
          <a class="ms-2" data-target="projects-list" href="/projects/browse">
            Archive
          </a>
        </li>
        <li class="nav-item col-lg-4">
          <a class="text-end" id="try-search" href="#">Search</a>
          <div id="search-block" class="ps-3{% if keys %} position-absolute{% else%} d-none{% endif %}">
            <form action="/search/node">
              <input id="search-input" name="keys" class="border-bottom text-start d-inline-block"{% if keys %} value="{{ keys }}"{% endif %}>
            </form>
          </div>
        </li>
        <li class="nav-item col-lg-4">
          <a class="text-end" data-target="about" href="/about">About</a>
        </li>
      </ul>
      <div id="navbarInnerContainer" class="d-none w-100">
        <div id="navbarInner" class="w-100 position-relative">
          <div id="navbarInnerContent">
            {% if contents.projects_list %}
              <div id="content--projects-list" class="inner-content d-none">
                {{ contents.projects_list }}
              </div>
            {% endif %}
            {% if contents.search %}
              <div id="content--search" class="inner-content d-none">
                {{ contents.search }}
              </div>
            {% endif %}
            {% if contents.about %}
              <div id="content--about" class="inner-content d-none">
                {{ contents.about }}
              </div>
            {% endif %}
          </div>
          <footer id="navbarFooter" class="mt-5 page--footer text-start position-absolute">
            <div class="d-inline-block float-end" id="navbar--btn-top">Up</div>
            <div class="d-inline-block">Â© Baan Studio</div>
          </footer>

        </div>
      </div>
    </div>
  </div>
</nav>
